[bar/bottom]
monitor = eDP-1
width = 100%
height = 15
offset-x = 0
offset-y = 0
;bottom=true
background = #ee1d1d1d
foreground = #ccfafafa

border-color = #ee2d2d2d
padding-left = 0
padding-right = 2
module-margin-left = 1
module-margin-right = 2

font-0 = hack:size=9;1

modules-right =  fan_speed1 fan_speed2  battery date
modules-center =  memory cpu
modules-left =  network


[module/network]
type = internal/network
interface = wlp2s0
format-connected =  <label-connected>
label-connected = %essid% %downspeed:9%


[module/cpu]
type = internal/cpu
interval = 2
label = CPU: %percentage% %

[module/memory]
type = internal/memory
interval = 2:
label = RAM  %percentage_used% %

[module/fan_speed1]
type = custom/script
interval = 2:
exec = sensors | grep 'Processor Fan' | cut -c15-19
label = Proc %output%


[module/fan_speed2]
type = custom/script
interval = 2:
exec = sensors | grep 'Video Fan' | cut -c15-19
label = Video %output%

[module/wifi]
type = internal/network
interface =
interval = 3.0


[module/date]
type = internal/date
date =  %H:%M %Y-%m-%d 
interval = 5


[module/battery]
battery = BAT0
adapter = ADP1
type = internal/battery
full-at = 100
time-format = %H:%M
format-charging = <label-charging>
format-discharging = <label-discharging>
label-charging = C %percentage%%
label-discharging = D %percentage% %time%
format-full = <label-full>
label-full = F
