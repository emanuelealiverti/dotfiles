<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://openbox.org/
                file:///usr/share/openbox/menu.xsd">

<menu id="root-menu" label="Openbox 3">
  <item label="Terminal">
	  <action name="Execute"><execute>/home/meme/bin/st</execute></action>
  </item>

  <item label="Chromium">
    <action name="Execute"><execute>chromium-browser</execute></action>
  </item>

  <separator />

  <separator />

  <item label="Exit">
    <action name="Exit" />
  </item>

<item label="Reboot">
    <action name="Execute">
        <prompt>
            Are you sure you want to reboot?
        </prompt>
        <execute>
            sudo shutdown -r now
        </execute>
    </action>
</item>

<item label="Shutdown">
    <action name="Execute">
        <prompt>
            Are you sure you want to shutdown?
        </prompt>
        <execute>
            sudo shutdown -h now
        </execute>
    </action>
</item>


</menu>

</openbox_menu>
